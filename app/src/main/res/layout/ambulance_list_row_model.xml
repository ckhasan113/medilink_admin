<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_doctor"
    android:layout_marginBottom="5dp"
    android:id="@+id/getAmbulanceRequestDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ambulance_request_user_iv"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="30dp"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/v_doctor"
            />

        <TextView
            tools:text="Name"
            android:gravity="center"
            android:textColor="#000000"
            android:id="@+id/ambulance_request_user_name_TV"
            android:layout_alignTop="@+id/ambulance_request_user_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ambulance_request_user_iv"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            tools:text="Pick UP"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/ambulance_request_user_pickup_address_tv"
            android:layout_below="@id/ambulance_request_user_name_TV"
            android:layout_alignStart="@+id/ambulance_request_user_name_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            tools:text="Phone: "
            android:textColor="#F44336"
            android:gravity="center"
            android:id="@+id/ambulance_request_user_phone_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/ambulance_request_user_pickup_address_tv"
            android:layout_alignStart="@+id/ambulance_request_user_name_TV"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ambulance_request_user_phone_tv"
            android:background="@drawable/client_request"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Get Details"/>
    </RelativeLayout>

</LinearLayout>